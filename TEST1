        <iframe src="https://docs.google.com/forms/d/e/1FAIpQLSetsGAgb0xM8GuM_BqC_hoD0VAGyTJPoa-nVB1aGe8753tFrw/viewform?usp=header"></iframe>
        
        body <
    /* Basic styling for visibility */
    display: flex;
    justify-content: center;
    align-items: center;
    height: 100vh;
    margin: 0;
    background-color: #282c34;
    font-family: sans-serif;>

.blinking-text <
    font-size: 2.5rem;
    color: #ff4136; /* Bright color for attention */
    font-weight: bold;

    /* --- ATTENTION PLEASE --- */
    animation: blinker 1s linear infinite;
    /* 'blinker' is the name of the keyframes below. */
    /* '1s' is the duration of one full blink cycle. */
    /* 'linear' maintains a steady speed. */
    /* 'infinite' makes it repeat forever. */
>

/* Define the keyframes for the animation */
@keyframes blinker {
    /* At 50% of the animation cycle, set the opacity to 0 (invisible) */
    50% {
        opacity: 0;
    }
}

/*
How this works:
- 0% (start) of the cycle: opacity is 1 (visible) by default.
- 50% (middle) of the cycle: opacity is 0 (invisible).
- 100% (end) of the cycle: opacity returns to 1 (visible) by default, starting the cycle over.
*/
        <script>   
        let lock = false;
        let countdown;

        document.addEventListener("visibilitychange", () => {
          if (document.hidden && !lock) {
            showOverlay();
          }
        });

        function showOverlay() {
          lock = true;
          const overlay = document.getElementById("overlay");
          const timer = document.getElementById("timer");
          let timeLeft = 30; // 30 second

          overlay.style.display = "flex";
          timer.textContent = timeLeft;

          countdown = setInterval(() => {
            timeLeft--;
            timer.textContent = timeLeft;
            if (timeLeft <= 0) {
              clearInterval(countdown);
              overlay.style.display = "none";
              lock = false;
            }
          }, 1000);
        }
        </script>

        </body>
        </html>
